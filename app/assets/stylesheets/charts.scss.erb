div.bar-chart {
  fieldset {
    display: inline-block;
    overflow: scroll;
    white-space: nowrap;

    legend {
      font-weight: bold;
      font-size: 2em;
    }

    span.total {
      font-weight: bold;
    }

    ul {

      li {
        display: inline-block;

        div.bar {
          border: 1px solid black;
          background-color: grey;
          display: block;
          vertical-align: bottom;
          text-align: center;
        }

        span.name {
          vertical-align: bottom;
        }
      }
    }
  }
}