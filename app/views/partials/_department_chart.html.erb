<div class="list-chart">
  <fieldset>

    <legend><%= department.latest_budget&.year %> Budget</legend>
    <span>Total: <%= currency department.latest_budget&.amount %></span>
    <table>
      <% department.latest_budget&.line_items&.order(amount: :desc)&.each do |line_item| -%>
        <tr>
          <td><%= line_item.name %></td>
          <td><%= currency line_item.amount %></td>
        </tr>
      <% end %>
    </table>
  </fieldset>
</div>
